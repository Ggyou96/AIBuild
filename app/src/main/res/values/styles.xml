<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AIBuild" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/purple_40</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_90</item>
        <item name="colorOnPrimaryContainer">@color/purple_10</item>
        
        <item name="colorSecondary">@color/purple_grey_40</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/purple_grey_90</item>
        <item name="colorOnSecondaryContainer">@color/purple_grey_10</item>
        
        <item name="colorTertiary">@color/pink_40</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/pink_90</item>
        <item name="colorOnTertiaryContainer">@color/pink_10</item>
        
        <item name="colorError">@color/error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>
        
        <item name="colorOutline">@color/outline</item>
        <item name="colorSurface">@color/light_background</item>
        <item name="colorOnSurface">@color/light_on_background</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Enable edge-to-edge display -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <!-- Activity transitions -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    
    <!-- Activity animation style -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
    
    <!-- Agent-specific styles -->
    <style name="AgentChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipMinHeight">32dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="AgentChip.Planner">
        <item name="chipBackgroundColor">@color/planner_agent_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="AgentChip.Teammate">
        <item name="chipBackgroundColor">@color/teammate_agent_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="AgentChip.Builder">
        <item name="chipBackgroundColor">@color/builder_agent_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Card styles -->
    <style name="AIBuildCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <style name="AIBuildCard.Agent">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="TextAppearance.AIBuild.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    
    <style name="TextAppearance.AIBuild.AgentName" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Button styles -->
    <style name="AIBuildButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="AIBuildButton.Agent">
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">40dp</item>
    </style>
    
    <!-- Icon styles -->
    <style name="AgentIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
</resources>